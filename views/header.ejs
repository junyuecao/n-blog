<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title><%= locals.title %></title>
<link rel="shortcut icon" href="/public/images/favicon.ico">
<link rel="stylesheet" href="/public/stylesheets/main.css">
<link type="text/css" rel="stylesheet" href="/public/libs/code-prettify/prettify.css">
<link rel="stylesheet" href="/public/stylesheets/style.css">

<script src="/public/libs/code-prettify/prettify.js"></script>
<script src="/public/libs/jquery/jquery.js"></script>

</head>
<body>
<div class="navbar navbar-static-top ">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
		    <span class="icon-bar"></span>
		    <span class="icon-bar"></span>
		    <span class="icon-bar"></span>
		  </a>
		  <a class="brand" href="/"><img src="/public/images/logo.png" alt="学习轨迹"></a>
		  <div class="nav-collapse collapse navbar-responsive-collapse">
			  <ul class="nav">
			    <li><a title="主页" href="/">主页</a></li>
			    <% if(locals.user){ %>
				  <li><a title="发表" href="/post"><i class="icon-pencil"></i>发表新文章</a></li>
					<% } %>
			  </ul>
              <form class="navbar-search pull-left" action="/search" method="get">
                  <input type="text" class="search-query" placeholder="搜索" name="key">
              </form>
			  <ul class="nav pull-right">
			    <% if(locals.user){ %>
			    <li><a title="查看我的文章" href="/user/<%= locals.user.name %>"><%= locals.user.name %></a></li>
				  <li><a title="登出" href="/signout">登出</a></li>
					<% } else { %>
				  <li><a title="登录" href="/signin">登录</a></li>
				  <li><a title="注册" href="/signup">注册</a></li>
					<% } %>
			  </ul>
			</div>
		</div>
	</div>
</div>
