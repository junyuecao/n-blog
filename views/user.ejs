<%- include header %>
<ul class="breadcrumb">
  <li><a href="/" class="active">首页</a> <span class="divider">&gt;</span></li>
  <li class="active"><%= locals.name %></li>
</ul>
<%- include alert %>
<% locals.posts.forEach(function(post, index){ %>
  <div class="article">
  	<p><h3><a href="/article/<%= post.name %>/<%= post._id %>"><%= post.title %></a></h3></p>
  	<p class="info">
  	  作者：<a href="/user/<%= post.name %>"><%= post.name %></a> |
  	  日期：<%= post.time.friendly %>
  	</p>
  	<div class="post"><%- post.post %></div>
  </div>
<% }) %>
<%- include footer %>